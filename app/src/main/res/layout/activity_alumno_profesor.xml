<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".AlumnoProfesor">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Creacion de \nAlumno o \nProfesor"
        android:textAlignment="center"
        android:textColor="@color/TituloColor"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/btColor"
        android:onClick="alumnoPuls"
        android:text="New Alumno" />

    <Button
        android:id="@+id/profe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alumno"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/btColor"
        android:onClick="profePuls"
        android:text="New Profesor" />

    <Button
        android:id="@+id/asignaturas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profe"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/btColor"
        android:onClick="asigPuls"
        android:text="New Asignatura" />

    <Button
        android:id="@+id/pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asignaturas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="19dp"
        android:text="NEW POKEMON"
        android:onClick="pokePuls"/>
</RelativeLayout>